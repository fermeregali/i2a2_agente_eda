{
  "version": 2,
  "builds": [
    {
      "src": "api.py",
      "use": "@vercel/python"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api.py"
    },
    {
      "src": "/(.*)",
      "dest": "/build/$1"
    }
  ],
  "env": {
    "GROQ_API_KEY": "@groq_api_key",
    "MONGO_URL": "@mongo_url",
    "DB_NAME": "@db_name",
    "CORS_ORIGINS": "@cors_origins"
  },
  "functions": {
    "api.py": {
      "maxDuration": 30
    }
  }
}
